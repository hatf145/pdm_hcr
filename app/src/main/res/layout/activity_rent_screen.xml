<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_gravity="center"

    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    android:orientation="vertical"
    android:background="@color/lightGray"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
       android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context="iteso.com.rentstudio.ActivityRentScreen">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rent_card_house_image"
                android:scaleType="centerInside"
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:src="@drawable/generic_house"
                android:layout_margin="@dimen/margin"/>

            <TextView
                android:id="@+id/rent_screen_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample House"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:textStyle="bold"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/rent_screen_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/rent_screen_lessor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrendador"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />

            <TextView

                android:id="@+id/rent_screen_payday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payday"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/rent_screen_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/rent_screen_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/rent_screen_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mail"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />


        </LinearLayout>
        <Button

            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar Renta"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/notReallyWhite"
            android:textSize="@dimen/regular_button_textSize"
            android:background="@drawable/button_ripple_effect"
            android:paddingHorizontal="@dimen/node_padding"
            android:layout_margin="@dimen/margin"
            android:layout_gravity="center_horizontal"
            android:onClick="onClick"/>



    </LinearLayout>
</ScrollView>

