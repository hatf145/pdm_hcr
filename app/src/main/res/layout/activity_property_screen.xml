<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
android:id="@+id/property_screen"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    android:orientation="vertical"
    android:background="@color/lightGray"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:gravity="center_horizontal"
        tools:context="iteso.com.rentstudio.ActivityPropertyScreen">

        <LinearLayout
            android:layout_margin="@dimen/margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/property_card_house_image"
                android:scaleType="centerInside"
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:src="@drawable/generic_house"
                android:layout_margin="@dimen/margin"/>
            <TextView
                android:id="@+id/property_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample House"
                android:textSize="@dimen/subtitle_size"
                android:textColor="@color/trueBlack"
                android:textStyle="bold"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
            <TextView
                android:id="@+id/property_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />

            <TextView

                android:id="@+id/property_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/property_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/property_town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Town"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/property_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />
            <TextView

                android:id="@+id/property_payday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <Button
            android:id="@+id/activity_property_screen_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editProperty"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/notReallyWhite"
            android:textSize="@dimen/regular_button_textSize"
            android:background="@drawable/button_ripple_effect"
            android:paddingHorizontal="@dimen/node_padding"
            android:layout_margin="@dimen/margin"
            android:layout_gravity="center_horizontal"
            android:onClick="onClick"/>


    </LinearLayout>
</ScrollView>

