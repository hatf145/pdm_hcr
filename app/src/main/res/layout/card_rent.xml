<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_margin="@dimen/margin"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:id="@+id/rent_card_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:orientation="vertical"
        android:background="@color/lightGray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rent_card_house_image"
                android:scaleType="centerInside"
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:src="@drawable/generic_house"
                android:layout_margin="@dimen/margin"/>

            <TextView
                android:id="@+id/rent_card_house_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample House"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:textStyle="bold"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rent_card_lessor_image"
                android:scaleType="centerInside"
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:src="@drawable/generic_user"
                android:layout_margin="@dimen/margin"/>

            <TextView
                android:id="@+id/rent_card_lessor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Lessor"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rent_card_date_image"
                android:scaleType="centerInside"
                android:layout_width="@dimen/icon_height"
                android:layout_height="@dimen/icon_height"
                android:src="@drawable/generic_calendar"
                android:layout_margin="@dimen/margin"/>

            <TextView
                android:id="@+id/rent_card_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Date"
                android:textSize="@dimen/card_view_text_size"
                android:textColor="@color/trueBlack"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
